# inherit package details from toolchain package
. "$SCRIPTDIR/pkg/tc-gcc1/build"

CONFIGURE_OPTIONS="--target=\"$TARGET\" --disable-nls"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --enable-languages=c,c++ --enable-c99"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --enable-long-long --enable-libmudflap"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --disable-multilib --disable-libsanitizer"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --disable-bootstrap --disable-lto"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --disable-tls --disable-libquadmath"
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --with-arch=\"$GCC_CPU\""
CONFIGURE_OPTIONS="$CONFIGURE_OPTIONS --with-native-system-header-dir=\"/include\""
. "$SCRIPTDIR/util/autotools.sh"
