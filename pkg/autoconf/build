VERSION="2.69"
SRCDIR="autoconf-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/autoconf"
SHA256SUM="64ebcec9f8ac5b2487125a86a7760d2591ac9e1d3dbd59489633f9de62a57684"

prepare() {
	cp "$SCRIPTDIR/util/config.guess" "build-aux"
	cp "$SCRIPTDIR/util/config.sub" "build-aux"
}

build() {
	run_configure "$1"
	make -j $NUMJOBS
}

deploy() {
	make DESTDIR="$SYSROOT" install
}
