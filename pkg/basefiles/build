deploy() {
	mkdir -p "$PKGDEPLOYDIR/etc"
	mkdir -p "$PKGDEPLOYDIR/dev"
	mkdir -p "$PKGDEPLOYDIR/root"
	mkdir -p "$PKGDEPLOYDIR/tmp"
	mkdir -p "$PKGDEPLOYDIR/usr"
	mkdir -p "$PKGDEPLOYDIR/usr/local"
	cp "$SCRIPTDIR/pkg/$PKGNAME/group" "$PKGDEPLOYDIR/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/passwd" "$PKGDEPLOYDIR/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/hostname" "$PKGDEPLOYDIR/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/hosts" "$PKGDEPLOYDIR/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/resolv.conf" "$PKGDEPLOYDIR/etc"

	mkdir -p "$PKGDEPLOYDIR/proc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/init.sh" "$PKGDEPLOYDIR"
	ln -s /proc/self/mounts "$PKGDEPLOYDIR/etc/mtab"
	ln -s /bin "$PKGDEPLOYDIR/usr/bin"
	ln -s /etc "$PKGDEPLOYDIR/usr/etc"
	ln -s /lib "$PKGDEPLOYDIR/usr/lib"
	ln -s /share "$PKGDEPLOYDIR/usr/share"
	ln -s /include "$PKGDEPLOYDIR/usr/include"
	ln -s /bin "$PKGDEPLOYDIR/usr/local/bin"
	ln -s /etc "$PKGDEPLOYDIR/usr/local/etc"
	ln -s /lib "$PKGDEPLOYDIR/usr/local/lib"
	ln -s /share "$PKGDEPLOYDIR/usr/local/share"
	ln -s /include "$PKGDEPLOYDIR/usr/local/include"
}
