deploy() {
	mkdir -p "$SYSROOT/etc"
	mkdir -p "$SYSROOT/dev"
	mkdir -p "$SYSROOT/root"
	mkdir -p "$SYSROOT/tmp"
	mkdir -p "$SYSROOT/usr"
	mkdir -p "$SYSROOT/usr/local"
	cp "$SCRIPTDIR/pkg/$PKGNAME/group" "$SYSROOT/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/passwd" "$SYSROOT/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/hostname" "$SYSROOT/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/hosts" "$SYSROOT/etc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/resolv.conf" "$SYSROOT/etc"

	mkdir -p "$SYSROOT/proc"
	cp "$SCRIPTDIR/pkg/$PKGNAME/init.sh" "$SYSROOT"
	ln -s /proc/self/mounts "$SYSROOT/etc/mtab"
	ln -s /bin "$SYSROOT/usr/bin"
	ln -s /etc "$SYSROOT/usr/etc"
	ln -s /lib "$SYSROOT/usr/lib"
	ln -s /share "$SYSROOT/usr/share"
	ln -s /include "$SYSROOT/usr/include"
	ln -s /bin "$SYSROOT/usr/local/bin"
	ln -s /etc "$SYSROOT/usr/local/etc"
	ln -s /lib "$SYSROOT/usr/local/lib"
	ln -s /share "$SYSROOT/usr/local/share"
	ln -s /include "$SYSROOT/usr/local/include"
}
